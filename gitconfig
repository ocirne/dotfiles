[alias]
    co = checkout
    ci = commit
    st = status -sb
    br = branch
    hist = log --pretty=format:\"%C(auto)%h%Creset %ad: %s%C(auto)%d%Creset [%an]\" --graph --date=relative --all
    simp = log --graph --oneline --simplify-by-decoration --decorate --all
    praise = blame
    sh = show -b
    di = diff -b
